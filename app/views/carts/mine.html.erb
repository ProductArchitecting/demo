<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @cart.user_id %>
</p>
<p>
  <strong>Products:</strong>
  <%=@cart.products.size %>

  <%@cart.products.each do |product| %>
    <%= product.name %> | <%=product.price%>
  <%end%>
</p>

<p>
  <strong>Price:</strong>
  <%= @cart.price %>
</p>

<p><%= link_to 'Checkout',@cart.paypal_url(products_url,payment_create_url) %></p>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
